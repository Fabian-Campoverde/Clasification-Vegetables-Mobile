
{
    "version": 2,
    "builds": [
      {
        "src": "image_classifier/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.8" }
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.8"
    },
    "functions": {
      "api": {
        "runtime": "python3.8",
        "memory": 1024,
        "maxDuration": 30
      }
    },
    
    "build": {
      "env": {
        "PIP_CACHE_FOLDER": "/tmp/pip-cache"
      },
      "commands": {
        "build": "pip install -r requirements.txt"
      }
    }
  }